apiVersion: networking.istio.io/v1alpha3
kind: Gateway
metadata:
  creationTimestamp: null
  name: istio-autogenerated-k8s-ingress
  namespace: istio-system
spec:
  selector:
    istio: ingress
  servers:
  - hosts:
    - '*'
    port:
      name: http-ingress-80
      number: 80
      protocol: HTTP
---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  creationTimestamp: null
  name: istio-autogenerated-k8s-ingress
  namespace: istio-system
spec:
  gateways:
  - istio-autogenerated-k8s-ingress
  hosts:
  - '*'
  http:
  - match:
    - authority:
        regex: ""
      uri:
        regex: /foo/.*
    route:
    - destination:
        host: myservice-service
        port:
          number: 9080
      weight: 100
  - match:
    - authority:
        regex: ""
      uri:
        regex: /.*
    route:
    - destination:
        host: my-ui
        port:
          number: 80
      weight: 100
